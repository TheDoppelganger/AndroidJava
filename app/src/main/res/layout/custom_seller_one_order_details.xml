<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_order_date_custom_seller_one_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Order Date"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/txt_order_id_custom_seller_one_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Order Id"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/txt_order_payment_custom_seller_one_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:text="Payment Completed"
            android:textSize="10dp"
            android:textColor="#000"/>
        <Button
            android:id="@+id/btn_view_order_custom_seller_one_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="View Order"
            android:textSize="10dp"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/txt_order_amount_custom_seller_one_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Amount"

            android:padding="5dp"
            android:textColor="#000"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>