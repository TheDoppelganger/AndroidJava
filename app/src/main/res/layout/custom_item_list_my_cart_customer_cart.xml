<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"

        android:weightSum="5">

        <ImageView
            android:id="@+id/img_product_item_list_custom_cart"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:weightSum="6.5">

            <TextView
                android:id="@+id/txt_item_name_item_list_custom_cart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:padding="5dp"
                android:text="Item Name"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_item_category_item_list_custom_cart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:padding="5dp"
                android:text="Category Name"
                android:textColor="#000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_item_short_description_item_list_custom_cart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Short Description"
                android:textColor="#000"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/txt_item_price_item_list_custom_cart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Price"
                    android:textColor="#000"
                    android:textSize="10dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1" />

                <ImageView
                    android:id="@+id/img_add_qut_item_list_custom_cart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:padding="5dp"
                    android:src="@drawable/ic_add_black_24dp" />

                <TextView
                    android:id="@+id/txt_qut_item_list_custom_cart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:text="QTY"

                    android:textColor="#2196F3"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/img_remove_qut_item_list_custom_cart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:padding="5dp"
                    android:src="@drawable/ic_remove_black_24dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_total_amount_item_list_custom_cart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4"
                android:gravity="end|center_vertical"
                android:text="Total"

                android:paddingRight="10dp"
                android:textColor="#000"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/btn_save_for_later_item_list_custom_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:text="Save For Later"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/btn_remove_item_list_custom_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:text="Remove"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"/>
    </LinearLayout>
</LinearLayout>