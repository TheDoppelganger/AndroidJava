        <LinearLayout
            android:id="@+id/llPriceAndQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/llOneShop"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                        <TextView
                            android:id="@+id/custom_select_quantity"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            />


                        <TextView
                            android:id="@+id/custom_addtoCart_price"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Price"
                           />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                        <EditText
                            android:id="@+id/et_quantity"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:background="@drawable/shape_dark"
                            android:layout_below="@id/custom_select_quantity"/>

                        <TextView
                            android:id="@+id/tv_price_dia"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Rs. 546.00"
                            android:padding="3dp"
                            android:layout_marginRight="10dp"
                            android:layout_below="@id/custom_addtoCart_price"
                            android:layout_alignParentRight="true"
                            android:background="#C1C1C1"/>
            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/btn_add_cart_custom_one_product_customer_one_shop_dia"
            android:layout_below="@id/llPriceAndQuantity"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Add to Cart"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            android:background="@drawable/shapebutn"/>

