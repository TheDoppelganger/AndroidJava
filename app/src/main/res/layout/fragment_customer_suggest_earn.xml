<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/view_order_linear_button"
                android:layout_margin="7dp"
                android:background="#fff"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:padding="10dp"
                        android:text="All Shop Near to Me"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@color/colorPrimary"
                        android:text="My Contribute"
                        android:textAllCaps="false"
                        android:textSize="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Each and every idea will give us a great opportunity to serve you the best.Your idea is really Valuable to us . So,Submit your idea and earn money to help your family."
                    android:textColor="#000"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step 1-Submit your idea\nStep 2-We sorting your idea and review it.\nStep 3-After review our Team will analysis your idea and approve it.\nStep 4-After approve it will be going to our R&amp;D Department,they will implement your idea.\nStep 5-After implement reward will credit to your account\n\n■ Base on your idea it will take maximum 7 days to implementation\n■ Based on your idea you can Upgrade your star Level\n■ Our Monthly award:Best Idea of the month ,Maximum.Idea of the month"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/btn_suggest_my_idea_customer_suggest_earn"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Suggest your Idea"
                    android:textAllCaps="false"
                    android:textSize="10dp" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout_customer_suggest_earn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    app:tabIndicatorColor="#000"
                    app:tabSelectedTextColor="#000"
                    app:tabTextColor="#000" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/page_viewer_customer_suggest_earn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior=    "@string/appbar_scrolling_view_behavior" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>