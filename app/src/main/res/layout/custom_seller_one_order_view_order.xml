<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:weightSum="8">

        <CheckBox
            android:id="@+id/ck_is_ready_dispatch_custom_seller_one_view_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text=""
            android:textColor="#000" />

        <ImageView
            android:id="@+id/img_product_custom_seller_one_view_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Item Image"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_product_name_custom_seller_one_view_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="Item Name"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_product_qut_custom_seller_one_view_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Quantity"
            android:textColor="#000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Price"
            android:id="@+id/txt_product_price_custom_seller_one_view_order"
            android:textColor="#000" />
    </LinearLayout>
</LinearLayout>