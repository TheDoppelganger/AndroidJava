<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_cancel_varient_custom_add_product"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/shapebutn"
        android:backgroundTint="#FF0000"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Cancel Variant"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_edit_text"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_variant_size_custom_add_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="7"
                android:background="@null"
                android:hint="Enter Variant/Size Name" />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_variant_packed_custom_add_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Packed"
                    android:padding="3dp"

                    android:background="@drawable/radio_flat_selector"
                    android:button="@android:color/transparent"
                    android:textColor="@color/radio_flat_text_selector"
                    />

                <RadioButton
                    android:id="@+id/rb_loose_add_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loose"
                    android:padding="3dp"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@android:color/transparent"
                    android:textColor="@color/radio_flat_text_selector"/>

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_unit_add_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="5">

            <Button
                android:id="@+id/btn_variant_kg_unit_custom_add_product"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="K.G."
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_variant_liter_unit_custom_add_product"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/button1"
                android:text="Liter"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_variant_other_unit_custom_add_product"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/button1"
                android:text="Other"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/edt_variant_other_unit_custom_add_product"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/shape_edit_text"
                android:hint="Type Unit"
                android:padding="3dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/edt_choose_Image_custom_add_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="6"
            android:text="Upload Product Image"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btn_select_image_varient_custom_add_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:src="@drawable/ic_attachment_svgrepo_com" />

        <ImageView
            android:id="@+id/btn_select_image_camera_varient_custom_add_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_camera_alt_black_24dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_edit_text"
        android:padding="5dp">

        <EditText
            android:id="@+id/edt_variant_barcode_custom_add_product"            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:hint="Enter the Bar Code"
            android:inputType="number" />

        <ImageView
            android:id="@+id/btnBarcodeScan"
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_barcode_scan"
            android:text="Button" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"

        android:weightSum="4">

        <EditText
            android:id="@+id/edt_variant_mrp_custom_add_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_edit_text"
            android:hint="MRP"
            android:padding="5dp" />

        <EditText
            android:id="@+id/edt_variant_price_custom_add_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="2"
            android:background="@drawable/shape_edit_text"
            android:hint="Price"
            android:padding="5dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_variant_stock_custom_add_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_edit_text"
        android:hint="Enter opening stock"
        android:padding="5dp" />


</LinearLayout>
