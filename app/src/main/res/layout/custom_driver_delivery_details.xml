<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_shop_custom_driver_delivery_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/img_shop_front_custom_driver_delivery_details"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:src="@drawable/find_me" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_shop_name_custom_driver_delivery_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Shop Name"
                android:textColor="#000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txt_shop_number_custom_driver_delivery_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:padding="5dp"
                android:text=" ............."
                android:textColor="#000" />

            <TextView
                android:id="@+id/txt_shop_address_custom_driver_delivery_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Shop Address"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txt_shop_distance_custom_driver_delivery_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:text="Distance"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btn_shop_direction_custom_driver_delivery_details"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/button"
                    android:drawableRight="@drawable/ic_directions_black_24dp"
                    android:text="Direction"
                    android:textAllCaps="false"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_customer_custom_driver_delivery_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_customer_name_custom_driver_delivery_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Customer Name"
            android:textColor="#000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txt_customer_phone_custom_driver_delivery_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text=" 000000000000000"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_customer_address_custom_driver_delivery_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Customer address"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/txt_customer_distance_custom_driver_delivery_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:padding="5dp"
                android:text="Distance"
                android:textColor="#000" />

            <Button
                android:id="@+id/btn_customer_direction_custom_driver_delivery_details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/button"
                android:drawableRight="@drawable/ic_directions_black_24dp"
                android:text="Direction"
                android:textAllCaps="false"
                android:textSize="10dp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>