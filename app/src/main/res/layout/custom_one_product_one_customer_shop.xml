<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:id="@+id/llOneShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/img_product_image_custom_one_product_one_customer_shop"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="100dp"

            android:padding="4dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/meat"/>


            <TextView
                android:id="@+id/txt_shop_rate_custom_one_product_customer_one_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.0(18)"
                android:textAlignment="center"
                android:drawableLeft="@drawable/ic_baseline_star_24"
                android:gravity="center_horizontal" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_product_name_custom_one_product_customer_one_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Gorgeus Wooden Mouse"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="4dp"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_variant_custom_one_product_customer_one_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Varient Name"
                    android:padding="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/shape"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/txt_variant_custom_one_product_customer_one_shop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Varient Name"
                    android:padding="4dp"
                    android:background="@drawable/shape"
                    android:textSize="10sp"/>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short Description"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:id="@+id/txt_price_custom_one_product_customer_one_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="546"
                android:drawableLeft="@drawable/ic_indian_rupee_symbol"
                android:textColor="#000000"
                android:layout_marginLeft="4dp"/>



        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_add_cart_custom_one_product_customer_one_shop"
        android:layout_below="@+id/llOneShop"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Add to Cart"
        android:layout_margin="4dp"
        android:textColor="@color/white"
        android:background="@drawable/shapebutn"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>