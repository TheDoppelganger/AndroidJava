<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    android:background="#fff"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dfe5f0"
        android:text="Add Product"
        android:textColor="#000" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_name_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edit_text"
                android:hint="Enter Product Name*"
                android:padding="5dp" />

            <EditText
                android:id="@+id/edt_barcode_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edit_text"
                android:drawableRight="@drawable/barcode"
                android:hint="Enter the barcode"
                android:padding="5dp" />
            <EditText
                android:id="@+id/edt_stock_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edit_text"
                android:drawableRight="@drawable/barcode"
                android:hint="Enter opening stock"
                android:padding="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/edt_choose_Image_add_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text"
                    android:padding="5dp"
                    android:text="Choose Image"
                    android:textColor="#000"
                    android:textSize="18dp" />
                <ImageView
                    android:id="@+id/btn_select_image_add_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_attach_file_24"/>
                <ImageView
                    android:id="@+id/btn_select_image_camera_add_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/ic_camera_alt_black_24dp"/>

            </LinearLayout>

            <Spinner
                android:id="@+id/spn_product_type_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:entries="@array/spn_product_type"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_variant_not_add_product"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Variant not available" />

                    <RadioButton
                        android:id="@+id/rb_variant_yes_add_product"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Variant available" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/linear_variant_add_product"
                android:orientation="horizontal"
                android:weightSum="4">

                <EditText
                    android:id="@+id/edt_variant_add_product"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:editable="false"
                    android:text="Yes"
                    android:background="@drawable/edit_text"
                    android:hint="!!!Variant"
                    android:padding="5dp" />
                <ImageView
                    android:id="@+id/img_add_variant_add_product"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_add_circle_black_24dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycle_variant_add_product"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_packed_add_product"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Packed" />

                    <RadioButton
                        android:id="@+id/rb_loose_add_product"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Loose" />

                </RadioGroup>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:padding="5dp"
                android:hint="Enter Variant/Size Name"/>
            <LinearLayout
                android:id="@+id/linear_unit_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:weightSum="5">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:textAllCaps="false"
                    android:text="K.G."/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button1"
                    android:textAllCaps="false"
                    android:text="Liter"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button1"
                    android:textAllCaps="false"
                    android:text="Other"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text"
                    android:padding="3dp"
                    android:hint="Type Unit"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <EditText
                    android:id="@+id/edt_mrp_add_product"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text"
                    android:hint="MRP"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/edt_price_add_product"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text"
                    android:hint="Price"
                    android:padding="5dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_short_description_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edit_text"
                android:hint="Short Description"
                android:padding="5dp" />

            <EditText
                android:id="@+id/edt_description_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edit_text"
                android:hint="Description"
                android:lines="5"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb_returnable_yes_add_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Returnable"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/rb_returnable_no_add_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Non Returnable"/>
                </RadioGroup>
            </LinearLayout>
            <Button
                android:id="@+id/add_product_btn_request_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:text="Request for publish"
                android:textAllCaps="false"
                android:textColor="#000" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>